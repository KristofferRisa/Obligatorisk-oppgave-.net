@model Trafikkal.web.Models.TestViewModels.QuestionViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Question</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.Question.QuizId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="@Model.Question.QuizId" class="form-control" asp-items="@ViewBag.QuizId">
                    @foreach (var item in Model.Quizzes)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>

            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Question.Number" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="@Model.Question.Number" class="form-control" />
                <span asp-validation-for="@Model.Question.Number" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Question.Text" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="@Model.Question.Text" class="form-control" />
                <span asp-validation-for="@Model.Question.Text" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Question.Img" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="@Model.Question.Img" class="form-control" />
                <span asp-validation-for="@Model.Question.Img" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Question.Video" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="@Model.Question.Video" class="form-control" />
                <span asp-validation-for="@Model.Question.Video" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Question.Alternative1" class="col-md-2 control-label"></label>
            <div class="col-md-4">
                <input asp-for="@Model.Question.Alternative1" class="form-control" />
                <span asp-validation-for="@Model.Question.Alternative1" class="text-danger"></span>
            </div>
            
            <div class="col-md-6 pull-left">
                <div class="checkbox-inline">
                    <input asp-for="@Model.Question.IsAlternative1Correct"/>
