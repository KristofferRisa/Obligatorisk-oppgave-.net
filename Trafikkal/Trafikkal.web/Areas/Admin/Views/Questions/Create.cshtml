            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Question.Alternative5" class="col-md-2 control-label"></label>
            <div class="col-md-4">
                <input asp-for="@Model.Question.Alternative5" class="form-control" />
                <span asp-validation-for="@Model.Question.Alternative5" class="text-danger"></span>
            </div>
            <div class="col-md-6 pull-left">
                <div class="checkbox-inline">
                    <input asp-for="@Model.Question.IsAlternative5Correct"/>
                    <label asp-for="@Model.Question.IsAlternative5Correct"></label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
