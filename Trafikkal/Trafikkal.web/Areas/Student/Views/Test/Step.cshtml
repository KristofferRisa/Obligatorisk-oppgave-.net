@model Trafikkal.web.Models.Question

@Html.AntiForgeryToken()
@Html.ValidationSummary("", new { @class = "text-danger" })

<br/>
<h3>@Model.Text</h3>
@{
    if (Model.Img != null)
    {
        <img class="img-responsive" src="@Model.Img" />
    }
    if (Model.Video != null)
    {
        <video src="@Model.Video"></video>
    }
}

<hr/>
<style>
    /*TODO gjør ferdig styling på input text*/
    label > input {
        font-size: 1.1em;
    }
</style>
<div class="radio-inline">
    <label>
        <input type="radio" id="AnswerAlternative1" name="Answer" value="@Model.Alternative1" required> @Model.Alternative1
    </label>
</div>
<div class="radio-inline">
    <label>
        <input type="radio" id="AnswerAlternative2" name="Answer" value="@Model.Alternative2"> @Model.Alternative2
    </label>
</div>
<div class="radio-inline">
    <label>
        <input type="radio" id="AnswerAlternative3" name="Answer" value="@Model.Alternative3"> @Model.Alternative3
    </label>
</div>
<div class="radio-inline">
    <label>
        <input type="radio" id="AnswerAlternative4" name="Answer" value="@Model.Alternative4"> @Model.Alternative4
    </label>
</div>


<br/>
<div class="col-md-offset-11">
    <input type="submit" class="btn btn-default" value="Svar"/>
</div>

