@model Domain.Models.Booking

@{
    ViewData["Title"] = "Endre";
}

<h2>Endre eller oppdater din reservasjon</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Detaljer</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="BookingId" />
        <div class="form-group">
            <label asp-for="ReservationCode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ReservationCode" class="form-control" readonly="true" />
                <span asp-validation-for="ReservationCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CustomerName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CustomerPhone" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CustomerPhone" class="form-control" />
                <span asp-validation-for="CustomerPhone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CustomerAdress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CustomerAdress" class="form-control" />
                <span asp-validation-for="CustomerAdress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FromDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @*<input asp-for="FromDate" class="form-control" />*@
                <input name="FromDate" id="FromDate" type="text" Value="@Model.FromDate.ToString("yyyy.MM.dd")" class="form-control" required="required" data-val-required="The Fra dato field is required." />
                <span asp-validation-for="FromDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ToDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @*<input asp-for="ToDate" class="form-control" />*@
                <input name="ToDate" id="ToDate" type="text" Value="@Model.ToDate.ToString("yyyy.MM.dd")" class="form-control" required="required" data-val-required="The Til dato field is required." />
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Endre" class="btn btn-default" />
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.BookingId">Slett</a>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Find">Tilbake</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
